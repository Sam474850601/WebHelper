<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:gravity="center_vertical"
    android:id="@+id/share_layout"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="#00000000"
    android:layout_height="fill_parent">

    <LinearLayout
        android:background="@drawable/bg_white_round"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/T54_6"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:text="分享到"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/main_line_color"/>

        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/share_wechat"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:clickable="true"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_weixin_share"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:paddingTop="@dimen/share_dialog_font_padding_top"
                    android:layout_width="wrap_content"
                    style="@style/share_font"
                    android:text="微信好友"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_wxcircle"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_wxcircle_share"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    style="@style/share_font"
                    android:paddingTop="@dimen/share_dialog_font_padding_top"
                    android:text="微信朋友圈"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_sina"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:clickable="true"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_weibo_share"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    style="@style/share_font"
                    android:paddingTop="@dimen/share_dialog_font_padding_top"
                    android:text="新浪微博"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/share_qq"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_qq_share"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    style="@style/share_font"
                    android:paddingTop="@dimen/share_dialog_font_padding_top"
                    android:text="QQ"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/share_qqzone"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_share_qzone"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    style="@style/share_font"
                    android:paddingTop="@dimen/share_dialog_font_padding_top"
                    android:text="QQ空间"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>